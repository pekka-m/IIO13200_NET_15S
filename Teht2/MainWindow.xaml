        <TextBox x:Name="txt_draws" HorizontalAlignment="Left" Height="23" Margin="134,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="button_draw" Content="Draw" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="75" Click="button_draw_Click"/>
        <Button x:Name="button_clear" Content="Clear" HorizontalAlignment="Left" Margin="114,89,0,0" VerticalAlignment="Top" Width="75" Click="button_clear_Click"/>
        <TextBlock x:Name="textBlock_result" HorizontalAlignment="Left" Margin="10,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="326" Width="266"/>

    </Grid>
</Window>
